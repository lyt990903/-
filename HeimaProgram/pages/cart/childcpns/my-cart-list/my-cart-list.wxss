/* pages/cart/childcpns/my-cart-list/my-cart-list.wxss */

.cart-title {
  font-size: 40rpx;
  padding: 20rpx;
  color: var(--themeColor);
  border-bottom: 1rpx solid var(--themeColor);
}

.cart-item {
  padding: 10rpx 20rpx 10rpx 0;
  display: flex;
  border-bottom: 2rpx solid #ccc;
}

.chk-wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img-wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img-wrap image {
  width: 80%;
}

.info-wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info-wrap .goods-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.info-wrap .goods-price-wrap {
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
}

.info-wrap .goods-price-wrap .goods-price {
  color: var(--themeColor);
}

.info-wrap .goods-price-wrap .goods-num-tool {
  display: flex;
}

.goods-num-tool>view{
  display: flex;
  justify-content: center;
  align-items: center;
  min-width: 55rpx;
  height: 55rpx;
}

.goods-num-tool> .goods-num {
  padding: 0 8rpx;
}

.goods-num-tool .num-edit {
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}