/* pages/goods_detail/goods_detail.wxss */
page {
  padding-bottom: 90rpx;
}

.goods-swiper {
  height: 65vw;
  text-align: center;
}

.goods-swiper image {
  width: 60%;
}

.goods-price {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
  padding: 20rpx;
}

.goods-raw {
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 10rpx solid #eee;
}

.goods-raw .goods-name {
  flex: 5;
  font-size: 30rpx;
  padding: 0 15rpx;
}

.goods-raw .goods-collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #000;
}

.info-title {
  color: var(--themeColor);
  font-size: 40rpx;
  font-weight: 800;
  padding: 15rpx 20rpx;
  border-bottom: 10rpx solid #eee;
}

.btm-toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
}

.toolbar-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.toolbar-item:nth-child(-n+3) {
  flex: 1;
  font-size: 24rpx;
}

.toolbar-item:nth-last-child(-n+2) {
  flex: 2;
  color: white;
  font-size: 30rpx;
  font-weight: 600;
}

.toolbar-item.btn-kefu,.toolbar-item.btn-fenxiang {
  position: relative;
}

.toolbar-item.btn-kefu>button,.toolbar-item.btn-fenxiang>button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.toolbar-item.btn-cart {
  background-color: #ffa300;
}

.toolbar-item.btn-buy {
  background-color: #FA544C;
}