/* pages/goods_list/childcpns/my-goods-item/my-goods-item.wxss */

.goods-item {
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.goods-img-wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goods-img-wrap>image {
  width: 70%;
}

.goods-info-wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-right: 15rpx;
}

.goods-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-price {
  color: var(--themeColor);
  font-size: 32rpx;
}
