/* pages/auth/auth.wxss */

.auth-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.auth-header {
  padding: 90rpx 50rpx;
}

.auth-avatar {
  border: 5rpx solid #03c05e;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}

.auth-title {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #020e0f;
}

.auth-content {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0 80rpx 0;
}